@model List<TraineeWithDepartmentNameViewModel>
 <a href="/Trainee/New" class="btn btn-primary">New Student</a>
<a asp-action="Index" asp-controller="Course" class="btn btn-primary">Go To Courses </a>

<table class="table table-bordered">
    <tr>
        <th>Trainee Name</th>
        <th>Trainee Address</th>
        <th>Grade</th>
        <th>Department</th>
        @* <th>Image</th> *@
        <th>Details</th>

    </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TraineeName</td>
            <td>@item.Address</td>
            <td>@item.Grade</td>
            <td> @item.DepartmentName</td>
            @* <td><img src="/Images/@item.Image" width="100px"/></td> *@
            <td> 
                <a href="/Trainee/Details/@item?.Id" class="btn btn-primary">Details</a>
                <a href="/Trainee/Edit/@item?.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Delete" asp-controller="Trainee" asp-route-Id="@item.Id" class="btn btn-primary"
                   onclick="return confirm('Are you sure you want to delete this Trainee?');">Delete</a>

            </td>
        </tr>
    }
</table>


