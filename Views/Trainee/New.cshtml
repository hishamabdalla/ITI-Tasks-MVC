@model Trainee
<form action="/Trainee/SaveNew" method="get">
    <div class="form-group">
        <label for="Name">Name</label>
        <input  type="text" value="@Model?.Name" name="Name" id="Name" class="form-control">
    </div>
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" value="@Model?.Address" name="Address" id="Address" class="form-control ">
    </div>
    <div class="form-group">
        <label for="Grade">Grade</label>
        <select name="Grade" class="form-control">
            @foreach (var item in ViewBag.Grade)
            {
                <option value="@item" >@item</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Department">Department</label>
        <select name="Dept_Id" class="form-control">
            @foreach (Department item in ViewBag.DeptList)
            {
                <option value="@item.Id" >@item.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Image">ImageUrl</label>
        <input type="text" value="@Model?.Image" name="Image" id="Image" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>