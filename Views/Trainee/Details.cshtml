@model TraineeWithDepartmentNameViewModel

<div class="card" style="width:350px">
    <img class="card-img-top" src="/Images/@Model?.Image" alt="Card image" style="width:100%">
    <div class="card-body">
        <h4 class="card-title">@Model?.TraineeName</h4>
        <p class="card-text">@Model.Address - @Model?.Grade - @Model.DepartmentName</p>
        <a href="/StudentGrades/AllGrades/@Model.Id" class="btn btn-primary">AllGrades</a>
    </div>
</div>

