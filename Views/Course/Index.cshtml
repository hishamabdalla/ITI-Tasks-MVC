@model IEnumerable<CourseAndDepartmentNameViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a asp-action="New"asp-controller="Course" class="btn btn-primary">Add New Course</a>

<table class="table table-bordered table-hover">
    <tr>
        <th>Course Name</th>
        <th>Course Degree</th>
        <th>Min Degree</th>
        <th>Department</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CourseName</td>
            <td>@item.Degree</td>
            <td>@item.MinDegree</td>
            <td> @item.DepartmentName</td>
           
            <td>
                <a asp-action="Edit" asp-controller="Course" asp-route-Id="@item.Id" class="btn btn-primary">Edit</a>
            </td>
        </tr>
    }
</table>

