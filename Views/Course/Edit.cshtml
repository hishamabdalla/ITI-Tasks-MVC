@model Course
@{
    ViewData["Title"] = "Edit";
    SelectList deptList = new SelectList(ViewBag.DeptList, "Id", "Name");

}

<h1>Edit</h1>

<form asp-action="SaveEdit" asp-controller="Course"  asp-route-Id="@Model.Id"  method="post">
    <label for="Id">Id</label>
    @* <input asp-for="Id" type="hidden" class="form-control"> *@
<div class="form-group"> 
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control">
</div>
<div class="form-group">
    <label asp-for="Degree"></label>
    <input asp-for="Degree" class="form-control">
</div>
<div class="form-group">
    <label asp-for="MinDegree"></label>
    <input asp-for="MinDegree" class="form-control">
</div>
<div class="form-group">
    <label asp-for="Dept_Id" ></label>
    <select asp-for="Dept_Id" asp-items="deptList" class="form-control">
    </select>
 </div>
<input type="submit" value="Save" class="btn btn-success" />

</form>